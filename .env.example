# LiteLLM Configuration
# Generate a secure master key with: openssl rand -hex 32
MASTER_KEY=sk-1234567890abcdef1234567890abcdef

UI_USERNAME=admin
UI_PASSWORD=zeromind

STORE_MODEL_IN_DB=true


# AWS Profile to use (optional - will use 'default' if not set)
AWS_PROFILE=BedrockAde

# AWS Region configuration
AWS_DEFAULT_REGION=us-east-1
AWS_REGION_NAME=us-east-1

# Optional: Database URL for tracking usage/stats
DATABASE_URL=postgresql://litellm_user:litellm_pass@postgres:5432/litellm_db

# Redis Configuration for Caching
REDIS_HOST=redis
REDIS_PORT=6379
# Optional: REDIS_PASSWORD=your_redis_password_here

# Z.AI API Configuration
ZAI_API_KEY={your_zai_api_key_here}
ZAI_API_BASE=https://api.z.ai/api/anthropic

GITHUB_COPILOT_TOKEN_DIR=/app/config/litellm/github_copilot